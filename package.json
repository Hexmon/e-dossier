{
  "name": "e-dossier-v2",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "pnpm run lint:theme && next lint",
    "lint:theme": "tsx scripts/check-theme-token-compliance.ts",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "type-check": "tsc --noEmit",
    "verify": "pnpm run lint && pnpm run typecheck && pnpm run build",
    "validate:action-map": "tsx scripts/validate-action-map.ts",
    "setup:git-hooks": "bash scripts/setup-git-hooks.sh || pwsh -File scripts/setup-git-hooks.ps1",
    "postinstall": "pnpm run setup:git-hooks",
    "check": "tsx scripts/health-check.ts",
    "db:generate": "drizzle-kit generate --config=./src/app/db/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=./src/app/db/drizzle.config.ts",
    "db:push": "drizzle-kit push --config=./src/app/db/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=./src/app/db/drizzle.config.ts",
    "seed:rbac": "tsx src/app/db/seeds/seedRolesAndPermissions.ts",
    "seed:permissions": "tsx src/app/db/seeds/seedPermissionsFromExcel.ts",
    "import:permissions": "tsx scripts/import-permissions-from-excel.ts",
    "seed:admins": "tsx src/app/db/seeds/seedAdminUser.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "security:semgrep": "mkdir -p .security && docker run --rm -v \"$PWD:/src\" -w /src returntocorp/semgrep semgrep scan --config p/javascript --config p/typescript --config p/react --config p/nodejs --config p/security-audit --config p/owasp-top-ten --sarif --output .security/semgrep.sarif .",
    "security:audit": "pnpm audit --audit-level=high",
    "security:audit:report": "mkdir -p .security && pnpm audit --audit-level=high --json > .security/pnpm-audit.json || true",
    "security:zap": "mkdir -p .zap && docker run --rm -t -v \"$PWD/.zap:/zap/wrk\" ghcr.io/zaproxy/zaproxy:stable zap-baseline.py -t \"${ZAP_TARGET_URL:-http://host.docker.internal:3000}\" -r zap-report.html",
    "security": "pnpm security:semgrep && pnpm security:audit:report && pnpm security:zap"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.990.0",
    "@aws-sdk/s3-request-presigner": "^3.990.0",
    "@hexmon_tech/acccess-control-compiler": "^0.1.0",
    "@hexmon_tech/acccess-control-core": "^0.1.0",
    "@hexmon_tech/acccess-control-engine-embedded": "^0.1.0",
    "@hexmon_tech/acccess-control-integrations-next-node": "^0.1.0",
    "@hexmon_tech/acccess-control-policy-dsl": "^0.1.0",
    "@hexmon_tech/audit-core": "^2.0.0",
    "@hexmon_tech/audit-export-postgres": "^2.0.0",
    "@hexmon_tech/audit-next": "^2.0.0",
    "@hexmon_tech/audit-node": "^2.0.0",
    "@hexmon_tech/audit-sink-postgres": "^2.0.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@reduxjs/toolkit": "^2.9.1",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-query-devtools": "^5.91.3",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.35.6",
    "argon2": "^0.44.0",
    "chart.js": "^4.5.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "isomorphic-dompurify": "^2.30.0",
    "jose": "^6.0.12",
    "lucide-react": "^0.546.0",
    "next": "15.4.11",
    "next-themes": "^0.4.6",
    "papaparse": "^5.5.3",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.65.0",
    "react-redux": "^9.2.0",
    "redux-persist": "^6.0.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5",
    "zod": "^4.0.17"
  },
  "pnpm": {
    "auditConfig": {
      "ignoreCves": [
        "CVE-2023-30533",
        "CVE-2024-22363"
      ]
    }
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/papaparse": "^5.3.16",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-redux": "^7.1.34",
    "@vitest/coverage-v8": "^4.0.9",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9",
    "eslint-config-next": "15.4.11",
    "tailwindcss": "^4",
    "tsx": "^4.20.4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.9"
  }
}
