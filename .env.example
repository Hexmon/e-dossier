# Database Configuration
# For local development, use PostgreSQL
# DATABASE_URL=postgresql://postgres:password@localhost:5432/e_dossier_v2

# For production, use your cloud database (e.g., Neon, Supabase, AWS RDS)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# JWT Configuration
# Generate new Ed25519 keys using:
# openssl genpkey -algorithm Ed25519 -out private_key.pem
# openssl pkey -in private_key.pem -pubout -out public_key.pem
# Then convert to single-line format with \n for line breaks

ACCESS_TOKEN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
ACCESS_TOKEN_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"

# JWT Token Time-To-Live (in seconds)
# Recommended: 900 seconds (15 minutes) for access tokens
ACCESS_TOKEN_TTL_SECONDS=9000

# CSRF Protection Secret
# Generate a random secret for CSRF token generation
# Example: openssl rand -base64 32
CSRF_SECRET=CHANGE_THIS_TO_RANDOM_SECRET

# Upstash Redis for Rate Limiting
# Sign up at https://console.upstash.com/ and create a Redis database
# Copy the REST URL and REST TOKEN from the database details page
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# Environment
NODE_ENV=development

# Development Settings
# Set to true to expose tokens in API responses during development
# NEVER set to true in production
EXPOSE_TOKENS_IN_DEV=false

# Super Admin Account
# These credentials are used to seed the initial super admin account
# IMPORTANT: Change these immediately after first deployment
SUPERADMIN_USERNAME=superadmin
SUPERADMIN_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
SUPERADMIN_EMAIL=superadmin@yourdomain.com
SUPERADMIN_PHONE=+910000000000
SUPERADMIN_NAME=Super Admin
SUPERADMIN_RANK=SUPER

# Admin Account
# These credentials are used to seed the initial admin account
# IMPORTANT: Change these immediately after first deployment
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PHONE=+910000000001
ADMIN_NAME=Admin
ADMIN_RANK=ADMIN

# Optional: Rate Limiting (if using Upstash Redis)
# UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your_token_here

# Optional: Logging and Monitoring
# LOG_LEVEL=info
# SENTRY_DSN=your_sentry_dsn_here

# Optional: Email Configuration (for notifications, password resets, etc.)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@yourdomain.com

# Security Notes:
# 1. NEVER commit the actual .env file to version control
# 2. Use strong, unique passwords for all accounts
# 3. Rotate JWT keys regularly (at least every 90 days)
# 4. Use different credentials for development, staging, and production
# 5. Store production secrets in a secure secret management service (AWS Secrets Manager, HashiCorp Vault, etc.)

